{# src/VA/PlatformBundle/Resources/views/Default/car.html.twig #}

{% extends "VAPlatformBundle::layout.html.twig" %}

{% block title %}
    Car | {{parent()}}
{% endblock %}

{% block body %}
    {% block nav %}
       {{parent()}} 
    {% endblock %}
 
    {% block content %}
        <section id="services">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h2 class="section-heading">Mercedes 190 sl</h2>
                        <h3 class="section-subheading text-muted">1955</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <ul class="bxslider">
                                <li><img src="{{asset('img/190sl/190-1.jpg')}}"/></li>
                                <li><img src="{{asset('img/190sl/190-2.jpg')}}"/></li>
                                <li><img src="{{asset('img/190sl/190-3.jpg')}}"/></li>
                            </ul>
                        </div>   
                        <div class="col-md-6">
                            <div id="description">
                                <h3 class="service-heading">Description</h3>
                                <ul>
                                    <li>Marque : Mercedes</li>
                                    <li>Modèle : 190sl</li>
                                    <li>Année : 1955</li>
                                    <li>Cylindrée : 1900cm³</li>
                                    <li>Carrosserie : Roadster</li>
                                    <li>Description : Test</li>
                                </ul>
                            <div class="text-center" id="qrcode"></div> 
                            <div class="text-right">
                                <img src="{{asset('img/print.png')}}" alt="print" onclick="javascript:window.print()"/>
                                <img src="{{asset('img/warning.png')}}" alt="Erreur"/>
                                <img src="{{asset('img/favourite.png')}}" alt="Favoris"/>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
                <div class="row text-center">


                </div>
            </div>
        </section>
    {% endblock %}
{% endblock %}
    
