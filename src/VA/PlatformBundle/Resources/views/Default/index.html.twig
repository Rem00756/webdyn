{# src/VA/PlatformBundle/Resources/views/Default/index.html.twig #}

{% extends "VAPlatformBundle::layout.html.twig" %}

{% block title %}
    Home | {{parent()}}
{% endblock %}


{% block body %}
    {% block nav %}
       {{parent()}} 
    {% endblock %}
 
    {% block content %}
        <div id="index">
            <div class="container">
                <div class="intro-text">
                    <div class="intro-lead-in">Bienvenue sur votre vosancetre.be</div>
                    <div class="input-group col-md-12">
                        <form action="{{ path('va_platform_search')}}" method="get">
                            <input type="text" class="form-control" name="formHome" autofocus>
                            
                            <button type="submit" id="button_recherche" class="btn btn-default btn-lg">
                                <i class="fa fa-search"></i> Go!
                            </button>
                        </form>
                    </div>
                    <div class="intro-heading">Trouver votre voiture !</div>
                </div>
            </div>
        </div>
        {% block footer %}{% endblock %}
    {% endblock %}
    
{% endblock %}

