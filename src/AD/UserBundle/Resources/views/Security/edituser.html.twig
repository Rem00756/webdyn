{# src/AD/PlatformBundle/Resources/views/Cars/editcars.html.twig #}

{% extends "ADPlatformBundle::layout.html.twig" %}

{% block title %}
    Edit User | {{parent()}}
{% endblock %}

 
{% block content %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Nouvelle voiture</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- /.row -->
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-4 col-md-offset-2">
                    <div class="well">
                        
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                            {# MARQUE#}
                            <div class="form-group">
                                {# Génération du label. #}
                                {{ form_label(form.username, "Pseudo :", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}

                                {# Affichage des erreurs pour ce champ précis. #}
                                {{ form_errors(form.username) }}

                                <div class="col-sm-8">
                                  {# Génération de l'input. #}
                                  {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div> 
                                
                            <div class="form-group">
                                {# Génération du label. #}
                                {{ form_label(form.enabled, "Compte activé :", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}

                                {# Affichage des erreurs pour ce champ précis. #}
                                {{ form_errors(form.enabled) }}

                                <div class="col-sm-8">
                                  {# Génération de l'input. #}
                                  {{ form_widget(form.enabled, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div> 
                        {{form_end(form)}}
                    </div>
                </div>
               
            </div>
        </div>     
        <!-- /.row -->
    </div>
{% endblock %}
    {# empty Twig template #}
