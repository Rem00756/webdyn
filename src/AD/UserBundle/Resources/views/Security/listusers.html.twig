{# src/AD/PlatformBundle/Resources/views/Cars/index.html.twig #}

{% extends "ADPlatformBundle::layout.html.twig" %}

{% block title %}
    Admin | {{parent()}}
{% endblock %}

{% block content %}
    <div class="row">
        
        <h1>Liste des utilisateurs</h1>
        <div class="table-responsive">          
            <table class="table">
                <thead>
                    <tr>
                        <th>Pseudo</th>
                        <th>Email</th>
                        <th>Ban</th>
                        <th>Modifier</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>  
                        <td>{{user.username}}</td>
                        <td>{{user.email}}</td>
                        <td>{{user.enabled}}</td>
                        <td><a href="{{path('us_userbundle_edit', {id:user.id})}}"><img src="{{asset('img/edit.png')}}" alt="edit" /></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}








